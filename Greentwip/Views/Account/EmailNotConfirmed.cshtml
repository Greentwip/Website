@model Greentwip.Models.ResendConfirmationEmailViewModel

@{
    ViewBag.Title = "Email not confirmed";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ResendConfirmationEmail", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Resend Email Confirmation Form</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p class="text-info">
        Your email is not confirmed.
        Please click "Resend" to resend the confirmation message.
    </p>
    <div class="form-group">
        <div class="col-md-10">

            <div class="col-sm-4">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
            </div>            
            
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-default" value="Resend" />
        </div>
    </div>
}